import random
import curses
import string

# Lista de palabras o citas
palabras = ["Hola", "Mundo", "OpenAI", "ChatGPT", "Typing", "Game"]

# Función para imprimir las palabras en la consola
def imprimir_palabras(win, palabras):
    height, width = win.getmaxyx()
    x = 2
    y = 2

    # Imprimir cada palabra en una nueva línea
    for palabra in palabras:
        # Verificar si la palabra cabe en la línea actual
        if x + len(palabra) >= width - 2:
            x = 2
            y += 1
        win.addstr(y, x, palabra)
        x += len(palabra) + 1

# Función principal del juego
def main(stdscr):
    curses.curs_set(0)  # Ocultar el cursor

    # Limpiar la pantalla
    stdscr.clear()

    # Obtener las dimensiones de la ventana de la consola
    height, width = stdscr.getmaxyx()

    # Obtener una palabra aleatoria
    palabra = random.choice(palabras)

    # Imprimir la palabra en la consola
    imprimir_palabras(stdscr, [palabra])

    # Ciclo principal del juego
    while True:
        # Capturar la entrada del usuario
        key = stdscr.getch()

        # Si la tecla es Enter, salir del juego
        if key == curses.KEY_ENTER or key in [10, 13]:
            break

        # Verificar si la tecla presionada coincide con la primera letra de la palabra
        if chr(key) == palabra[0]:
            stdscr.addstr(2, 2, palabra[0], curses.color_pair(2))  # Imprimir en verde
            palabra = palabra[1:]  # Quitar la primera letra de la palabra
            if not palabra:
                break  # Si la palabra está vacía, el juego termina
        else:
            stdscr.addstr(2, 2, palabra[0], curses.color_pair(1))  # Imprimir en rojo

    # Mostrar un mensaje al final del juego
    stdscr.addstr(height - 2, 2, "Presiona Enter para salir...", curses.A_BOLD)
    stdscr.getch()

# Inicializar curses y configurar los colores
curses.wrapper(main)
